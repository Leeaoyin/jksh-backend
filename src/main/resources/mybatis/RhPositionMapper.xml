  <select id="getPagePositionByCondition" resultMap="BaseResultMap">
    select * from rh_position where 1=1

    <if test="key_word != '' and key_word != null">
       and postion_name like concat('%',#{key_word},'%') or company_name like concat('%',#{key_word},'%')
    </if>
                                  
    <if test="city != null">
      and city_work in
      <foreach collection="city" item="city" index="index" open="(" close=")" separator=",">
        #{city}
      </foreach>
    </if>

    <if test="functional != null">
      and functional_type in
      <foreach collection="functional" item="functional" index="index" open="(" close=")" separator=",">
         #{functional}
      </foreach>
    </if>

    <if test="industry != null">
      and industry_information in
      <foreach collection="industry" item="industry" index="index" open="(" close=")" separator=",">
        #{industry}
      </foreach>
    </if>

    <if test="experience != null">
      and years_of_working in
      <foreach collection="experience" item="experience" index="index" open="(" close=")" separator=",">
        #{experience}
      </foreach>
    </if>
             
    and is_deleted = 0

    <choose>
      <when test="tag != null">
        order by order_count desc
      </when>
      <otherwise>
        order by create_time desc
      </otherwise>
    </choose>
    
    limit #{offset}, #{pageSize}
  </select>

  <select id="getCountByCondition" resultMap="BaseResultMap">
    select * from rh_position where 1=1

    <if test="key_word != '' and key_word != null">
      and postion_name like concat('%',#{key_word},'%') or company_name like concat('%',#{key_word},'%')
    </if>

    <if test="city != null">
      and city_work in
      <foreach collection="city" item="city" index="index" open="(" close=")" separator=",">
        #{city}
      </foreach>
    </if>

    <if test="functional != null">
      and functional_type in
      <foreach collection="functional" item="functional" index="index" open="(" close=")" separator=",">
