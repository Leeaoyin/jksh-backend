    </if>

    <if test="industry != null">
      and industry_information in
      <foreach collection="industry" item="industry" index="index" open="(" close=")" separator=",">
        #{industry}
      </foreach>
    </if>

    <if test="experience != null">
      and years_of_working in
      <foreach collection="experience" item="experience" index="index" open="(" close=")" separator=",">
        #{experience}
      </foreach>
    </if>

    and is_deleted = 0
  </select>
  
  <select id="getPositionOfUser" resultMap="BaseResultMap">
    select * from rh_position where is_deleted = 0
    <if test="positionId != null and positionId.size > 0">
      and id in                      
      <foreach collection="positionId" item="id" index="index" open="(" close=")" separator=",">
         #{id}
      </foreach>
    </if>                       
    limit #{offset}, #{pageSize}
  </select>
  
