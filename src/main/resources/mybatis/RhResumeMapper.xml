        #{year_of_work}
      </foreach>
    </if>

    and status = 1

  </select>
  
  
  <select id="getResumes" resultMap="BaseResultMap">
    select * from rh_resume where 1=1
    and id in
    <foreach collection="list" item="ids" index="index" open="(" close=")" separator=",">
      #{ids}
    </foreach>
