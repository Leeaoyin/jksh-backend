  <select id="getPagePositionByCondition" resultMap="BaseResultMap">
    select * from rh_resume where 1=1

    <if test="key_word != '' and key_word != null">
      and name like concat('%',#{key_word},'%') or phone like concat('%',#{key_word},'%')
    </if>

    <if test="city != null">
      and desired_city in
      <foreach collection="city" item="city" index="index" open="(" close=")" separator=",">
        #{city}
      </foreach>
    </if>

    <if test="degree != null">
      and degree in
      <foreach collection="degree" item="degree" index="index" open="(" close=")" separator=",">
        #{degree}
      </foreach>
    </if>

    <if test="year_of_work != null">
      and year_of_work in
      <foreach collection="year_of_work" item="year_of_work" index="index" open="(" close=")" separator=",">
        #{year_of_work}
      </foreach>
    </if>
                              
    and status = 1

    <choose>
      <when test="tag != null">
        order by order_count desc
      </when>
      <otherwise>
        order by create_time desc
      </otherwise>
    </choose>

    limit #{offset}, #{pageSize}
  </select>

  <select id="getCountByCondition" resultMap="BaseResultMap">
    select * from rh_resume where 1=1

    <if test="key_word != '' and key_word != null">
